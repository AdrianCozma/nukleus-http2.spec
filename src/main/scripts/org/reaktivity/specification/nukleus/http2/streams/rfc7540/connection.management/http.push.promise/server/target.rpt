property nuklei ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)}

property targetInput ${nuklei.streams("target", "http2#source")}
property targetOutputEst ${nuklei.streams("http2", "target")}
property newTargetOutputEstId ${nuklei:newStreamId()}

property promiseInput ${nuklei.streams("target", "http2#target")}
property newPushOutputEstId1 ${nuklei:newStreamId()}
property newPushOutputEstId2 ${nuklei:newStreamId()}



#
#
# reading from nukleus-->target (target/http2#source)
#
#
connect await ROUTED_OUTPUT
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(targetInput.buffer)}
        option writer ${agrona:oneToOneWriter(targetInput.throttle)}
connected

read [0x00 0x00 0x00 0x01]
read ([0..8]:targetInputId)
read ([0..8]:targetInputRef)
read ([0..8]:targetCorrelationId)
read [0x00] [0x07] ":method" [0x04] "POST"
read [0x00] [0x07] ":scheme" [0x04] "http"
read [0x00] [0x05] ":path" [0x01] "/"
read [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"

# window frame
write [0x40 0x00 0x00 0x02]
write ${targetInputId}
write [0x00 0x02 0x00 0x00]
write flush

# data frame (with http request payload) -- corresponds to HTTP2 stream_id=1
read [0x00 0x00 0x00 0x02]
read ${targetInputId}
read [0x00 0x0c]
read "Hello, world"

read notify HTTP_REQUEST_RECEIVED

# window frame
write [0x40 0x00 0x00 0x02]
write ${targetInputId}
write [0x00 0x02 0x00 0x00]
write flush


#
#
# reading from nukleus-->target (target/http2#target)
#
#
connect await ROUTED_OUTPUT
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(promiseInput.buffer)}
        option writer ${agrona:oneToOneWriter(promiseInput.throttle)}
connected

# promised request1
read [0x00 0x00 0x00 0x01]
read ([0..8]:pushInputId1)
read ([0..8]:targetInputRef)
read ([0..8]:pushCorrelationId1)
read [0x00] [0x07] ":method" [0x03] "GET"
read [0x00] [0x07] ":scheme" [0x04] "http"
read [0x00] [0x05] ":path" [0x0a] "/resource1"
read [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"

# window frame
write [0x40 0x00 0x00 0x02]
write ${pushInputId1}
write [0x00 0x02 0x00 0x00]
write flush

write notify PROMISED_REQUEST1_RECEIVED

# promised request2
read [0x00 0x00 0x00 0x01]
read ([0..8]:pushInputId2)
read ([0..8]:targetInputRef)
read ([0..8]:pushCorrelationId2)
read [0x00] [0x07] ":method" [0x03] "GET"
read [0x00] [0x07] ":scheme" [0x04] "http"
read [0x00] [0x05] ":path" [0x0a] "/resource2"
read [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"

# window frame
write [0x40 0x00 0x00 0x02]
write ${pushInputId2}
write [0x00 0x02 0x00 0x00]
write flush

write notify PROMISED_REQUEST2_RECEIVED



#
#
# writing to target-->nukleus (http2/target)
#
#
connect await HTTP_REQUEST_RECEIVED
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(targetOutputEst.throttle)}
        option writer ${agrona:oneToOneWriter(targetOutputEst.buffer)}
connected

# begin frame (with http headers)
write [0x00 0x00 0x00 0x01]
write ${newTargetOutputEstId}
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write ${targetCorrelationId}
write [0x00] [0x07] ":status" [0x03] "404"
write [0x00] [0x06] "server" [0x14] "CERN/3.0 libwww/2.17"
write [0x00] [0x04] "date" [0x1d] "Wed, 01 Feb 2017 19:12:46 GMT"
write [0x00] [0x0c] "content-type" [0x18] "text/html; charset=UTF-8"
write [0x00] [0x0e] "content-length" [0x02] "61"
write flush

# window frame
read [0x40 0x00 0x00 0x02]
read ${newTargetOutputEstId}
read [0..4]

# data frame (with http payload with push promise ext)
write [0x00 0x00 0x00 0x02]
write ${newTargetOutputEstId}
write [0x00 0x00]
write [0x00] [0x07] ":method" [0x03] "GET"
write [0x00] [0x07] ":scheme" [0x04] "http"
write [0x00] [0x05] ":path" [0x0a] "/resource1"
write [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
write flush

# window frame
read [0x40 0x00 0x00 0x02]
read ${newTargetOutputEstId}
read [0..4]

# data frame (with http payload with push promise ext)
write [0x00 0x00 0x00 0x02]
write ${newTargetOutputEstId}
write [0x00 0x00]
write [0x00] [0x07] ":method" [0x03] "GET"
write [0x00] [0x07] ":scheme" [0x04] "http"
write [0x00] [0x05] ":path" [0x0a] "/resource2"
write [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
write flush

# window frame
read [0x40 0x00 0x00 0x02]
read ${newTargetOutputEstId}
read [0..4]

# data frame (with http payload)
write [0x00 0x00 0x00 0x02]
write ${newTargetOutputEstId}
write [0x00 0x3d]
write "<html><head></head><body><h1>404 Not Found</h1></body></html>"
write flush

# window frame
read [0x40 0x00 0x00 0x02]
read ${newTargetOutputEstId}
read [0..4]

write await PROMISED_REQUEST1_RECEIVED

# begin frame (with http headers)
write [0x00 0x00 0x00 0x01]
write ${newPushOutputEstId1}
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write ${pushCorrelationId1}
write [0x00] [0x07] ":status" [0x03] "200"
write [0x00] [0x06] "server" [0x14] "CERN/3.0 libwww/2.17"
write [0x00] [0x04] "date" [0x1d] "Wed, 01 Feb 2017 19:12:46 GMT"
write [0x00] [0x0c] "content-type" [0x18] "text/html; charset=UTF-8"
write [0x00] [0x0e] "content-length" [0x02] "61"
write flush

# window frame
read [0x40 0x00 0x00 0x02]
read ${newPushOutputEstId1}
read [0..4]

# data frame (with http payload)
write [0x00 0x00 0x00 0x02]
write ${newPushOutputEstId1}
write [0x00 0x3d]
write "<html><head></head><body><h1>Push Response1</h1></body></html>"
write flush

# window frame
read [0x40 0x00 0x00 0x02]
read ${newPushOutputEstId1}
read [0..4]

write await PROMISED_REQUEST2_RECEIVED

# begin frame (with http headers)
write [0x00 0x00 0x00 0x01]
write ${newPushOutputEstId2}
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write ${pushCorrelationId2}
write [0x00] [0x07] ":status" [0x03] "200"
write [0x00] [0x06] "server" [0x14] "CERN/3.0 libwww/2.17"
write [0x00] [0x04] "date" [0x1d] "Wed, 01 Feb 2017 19:12:46 GMT"
write [0x00] [0x0c] "content-type" [0x18] "text/html; charset=UTF-8"
write [0x00] [0x0e] "content-length" [0x02] "61"
write flush

# window frame
read [0x40 0x00 0x00 0x02]
read ${newPushOutputEstId2}
read [0..4]

# data frame (with http payload)
write [0x00 0x00 0x00 0x02]
write ${newPushOutputEstId2}
write [0x00 0x3d]
write "<html><head></head><body><h1>Push Response2</h1></body></html>"
write flush

# window frame
read [0x40 0x00 0x00 0x02]
read ${newPushOutputEstId2}
read [0..4]
